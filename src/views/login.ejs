<%- include('partials/headerlogin') %>
<div class="w-full h-full ">
    <h1 class="text-center text-2xl pt-10">Faça login para continuar</h1>

    <form action="/login" method="post" class="flex flex-col p-4 gap-2 pt-20">
        <% if(err) { %>
            <p class="text-red-400 text-center">Usuario Ou Senha Invalidos</p>
        <% } %>
        <label class="text-xl pl-1">Usuario/Nome</label>
        <input type="text" name="nome" placeholder="Usuario" class="mb-6 px-3 py-4 outline-none border-none shadow-md bg-gray-50">
        <label class="text-xl pl-1">Senha</label>
        <input type="password" name="senha" placeholder="********" class="mb-6 px-3 py-4 outline-none border-none shadow-md bg-gray-50">
        <button type="submit" class=" bg-black text-white h-16 rounded-lg outline-none border-none shadow-md text-lg" id="loginbutton">Fazer Login</button>
    </form>
   <div class="flex gap-1 w-full justify-center text-lg pt-5">
        <h2>Não tem uma conta?</h2><a href="/cadastro"><h2 class="font-bold hover:underline">cadastra-se aqui!</h2></a>
   </div>
</div>
<script src="/script/script.js"></script>